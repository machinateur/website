{# component: twitter-card #}

{% block meta %}
    <meta name="twitter:card" content="{{ 'summary' }}">
    <meta name="twitter:site" content="{{ '@' ~ value.site|default('machinateur') }}">
    {% if value.author is defined and value.author is not empty %}
        <meta name="twitter:creator" content="{{ '@' ~ value.author }}">
    {% endif %}
    {% if value.title is defined and value.title is not empty %}
        {# length: 70 #}
        <meta name="twitter:title" content="{{ value.title|striptags|u.truncate(70, '...', true) }}">
    {% endif %}
    {% if value.description is defined and value.description is not empty %}
        {# length: 200 #}
        <meta name="twitter:description" content="{{ value.description|striptags|u.truncate(200, '...', true) }}">
    {% endif %}
    {% if value.image is defined and value.image is not empty %}
        <meta name="twitter:image" content="{{ value.image }}">
        {% if value.image_alt is defined and value.image_alt is not empty %}
            {# length: 420 #}
            <meta name="twitter:image:alt" content="{{ value.image_alt|striptags|u.truncate(420, '...', true) }}">
        {% endif %}
    {% endif %}
{% endblock %}
